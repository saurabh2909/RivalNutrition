<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:id="@+id/popup_element"
    android:layout_height="match_parent"
    android:orientation="vertical">

   <!-- <LinearLayout
        android:background="#ffffff"
        android:layout_margin="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
-->
        <TextView
            android:id="@+id/screen_six_foodname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Brown rice"
            android:gravity="center"
            android:textColor="#000000"
            android:padding="10dp"
            />

        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Grams"
                android:gravity="center"
                android:textColor="#000000"
                android:padding="10dp"
                />
            <LinearLayout
                android:layout_margin="10dp"
                android:background="#E0E0E0"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <EditText
                android:id="@+id/screen_six_gram_edit"
                android:backgroundTint="#00000000"
                android:layout_width="match_parent"
                android:inputType="number"
                android:maxLength="4"
                android:layout_gravity="center"
                android:gravity="center"
                android:imeOptions="actionDone"
                android:layout_height="wrap_content" />
            </LinearLayout>


        </LinearLayout>
        <View
            android:layout_marginTop="15dp"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1.3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Protein"
                android:gravity="center"
                android:textAlignment="viewStart"
                android:textColor="#000000"
                android:padding="10dp"
                />
            <TextView
                android:layout_weight="1.5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="-"
                android:gravity="center"
                android:textColor="#000000"
                android:padding="10dp"
                />
            <LinearLayout
                android:layout_weight="1"
                android:textAlignment="viewEnd"
                android:layout_gravity="end"
                android:gravity="end"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/screen_six_protein"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="0.39"
                    android:textAlignment="viewEnd"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="(g)"
                    android:textAlignment="viewEnd"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1.3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Carbs"
                android:gravity="center"
                android:textAlignment="viewStart"
                android:textColor="#000000"
                android:padding="10dp"
                />
            <TextView
                android:layout_weight="1.5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="-"

                android:gravity="center"
                android:textColor="#000000"
                android:padding="10dp"
                />
            <LinearLayout
                android:layout_weight="1"
                android:layout_gravity="end"
                android:gravity="end"
                android:layout_marginRight="20dp"
                android:textAlignment="viewEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/screen_six_carb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="0.39"
                    android:textAlignment="viewEnd"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="(g)"
                    android:textAlignment="viewEnd"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1.3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Fats"
                android:textAlignment="viewStart"
                android:gravity="center"
                android:textColor="#000000"
                android:padding="10dp"
                />
            <TextView
                android:layout_weight="1.5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="-"
                android:gravity="center"
                android:textColor="#000000"
                android:padding="10dp"
                />
            <LinearLayout
                android:layout_weight="1"
                android:layout_gravity="end"
                android:gravity="end"
                android:layout_marginRight="20dp"
                android:textAlignment="viewEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/screen_six_fats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="0.39"
                    android:textAlignment="viewEnd"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="(g)"
                    android:textAlignment="viewEnd"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1.3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Calories"
                android:textAlignment="viewStart"
                android:gravity="center"
                android:textColor="#000000"
                android:padding="10dp"
                />
            <TextView
                android:layout_weight="1.5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="-"
                android:gravity="center"
                android:textColor="#000000"
                android:padding="10dp"
                />
            <LinearLayout
                android:layout_marginLeft="-60dp"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:gravity="end"
                android:layout_marginRight="20dp"
                android:textAlignment="viewEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/screen_six_calories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="0.39"
                    android:textAlignment="viewEnd"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="(kcal)"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    />
            </LinearLayout>

        </LinearLayout>
        <Button
            android:id="@+id/screen_six_confirm"
            android:text="Confirm"
            android:textAllCaps="false"
            android:background="#4A904A"
            android:layout_margin="20dp"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />
    <!--</LinearLayout>-->



</LinearLayout>