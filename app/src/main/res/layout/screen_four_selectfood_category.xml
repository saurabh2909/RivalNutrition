<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="start"
            android:padding="8dp"
            android:text="Select"
            android:textColor="#000000"
            android:textSize="25dp"

            />
        <TextView
            android:id="@+id/screen_four_foodtxt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="start"
            android:padding="8dp"
            android:layout_marginLeft="-8dp"
            android:text="Food 1"
            android:textColor="#000000"
            android:textSize="25dp"

            />
    </LinearLayout>
    <FrameLayout
        android:layout_marginBottom="2dp"
        android:id="@+id/fruits"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/fruits"
            />
        <TextView
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="#80000000"
            android:text="Fruits"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>
    <FrameLayout
        android:layout_marginBottom="2dp"
        android:id="@+id/vegetables"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/vegetables"
            />
        <TextView
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="#80000000"
            android:text="Vegetables"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>
    <FrameLayout
        android:layout_marginBottom="2dp"
        android:id="@+id/protein_foods"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/protein_food"
            />
        <TextView
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="#80000000"
            android:text="Protein foods"
            android:textColor="#ffffff"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>
    <FrameLayout
        android:layout_marginBottom="2dp"
        android:id="@+id/grains"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/grains"
            />
        <TextView
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="#80000000"
            android:text="Grains"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>
    <FrameLayout
        android:id="@+id/others"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/dairy"
            />
        <TextView
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="#80000000"
            android:text="Others"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>
</LinearLayout>
    </ScrollView>
</LinearLayout>