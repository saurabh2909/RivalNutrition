<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="start"
                android:padding="8dp"
                android:text="Select"
                android:textColor="#000000"
                android:textSize="25dp"

                />

            <TextView
                android:id="@+id/screen_four_foodtxt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="-8dp"
                android:gravity="start"
                android:padding="8dp"
                android:text="Food 1"
                android:textColor="#000000"
                android:textSize="25dp"

                />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/fruits"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/fruits" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#80000000"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Fruits"
                android:textColor="#ffffff"
                android:textSize="25dp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/vegetables"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/vegetables" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#80000000"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Vegetables"
                android:textColor="#ffffff"
                android:textSize="25dp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/protein_foods"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/protein_food" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#80000000"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Protein foods"
                android:textColor="#ffffff"
                android:textSize="25dp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/grains"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/grains" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#80000000"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Grains"
                android:textColor="#ffffff"
                android:textSize="25dp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/others"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/dairy" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#80000000"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Others"
                android:textColor="#ffffff"
                android:textSize="25dp" />
        </FrameLayout>
    </LinearLayout>
</ScrollView>